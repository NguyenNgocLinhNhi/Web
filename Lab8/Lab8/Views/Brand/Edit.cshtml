@model Lab8.Models.Brand

@{
    ViewData["Title"] = "Chỉnh sửa Hãng Xe";
}

<h1 class="mt-4">Chỉnh sửa thông tin</h1>
<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-warning text-dark font-weight-bold">
                <i class="fas fa-edit me-1"></i> Cập nhật ID: @Model.Id
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold small text-uppercase">Tên Hãng</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Country" class="form-label fw-bold small text-uppercase">Quốc Gia</label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Cập nhật</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>