@model Lab8.Models.Brand

<div class="container-fluid px-4">
    <h1 class="mt-4">@(Model?.Id > 0 ? "Cập Nhật Hãng Xe" : "Thêm Hãng Xe Mới")</h1>
    
    <div class="card shadow mb-4 border-left-success">
        <div class="card-body">
            <form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")" method="post">
                @if (Model?.Id > 0) { <input type="hidden" asp-for="Id" /> }

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ví dụ: Toyota, Honda..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Country" class="form-label fw-bold"></label>
                        <input asp-for="Country" class="form-control" placeholder="Ví dụ: Nhật Bản, Đức..." />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <div class="mt-4 border-top pt-3">
                    <button type="submit" class="btn btn-success px-5 shadow">LƯU THÔNG TIN</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">HỦY BỎ</a>
                </div>
            </form>
        </div>
    </div>
</div>