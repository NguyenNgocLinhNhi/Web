@model IEnumerable<Lab8.Models.Brand>
<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Hãng Xe</h1>
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <span><i class="fas fa-tags me-1"></i> Danh sách hãng sản xuất</span>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold">Thêm hãng mới</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tên Hãng</th>
                        <th>Quốc gia</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Name</strong></td>
                            <td>@item.Country</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>