@model IEnumerable<Lab8.Models.CarModelVm>
<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Dòng Xe</h1>
    <div class="card mb-4 shadow">
        <div class="card-header bg-dark text-white d-flex justify-content-between">
            <span><i class="fas fa-list me-1"></i> Các dòng xe hiện có</span>
            <a asp-action="Create" class="btn btn-primary btn-sm">Thêm dòng xe</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Dòng Xe</th>
                        <th>Hãng Sản Xuất</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CarModelName</td>
                            <td><span class="badge bg-info text-dark">@item.BrandName</span></td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>