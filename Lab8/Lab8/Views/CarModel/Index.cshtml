@model IEnumerable<Lab8.Models.CarModel>

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase fw-bold text-primary">Quản Lý Dòng Xe</h1>

    <div class="card mb-4 shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-layer-group me-2"></i>Danh sách các dòng xe hiện có</h6>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold text-primary shadow-sm">
                <i class="fas fa-plus-circle me-1"></i> Thêm dòng xe mới
            </a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>Tên Dòng Xe</th>
                        <th>Hãng Sản Xuất</th>
                        <th style="width: 300px;">Mô tả chung</th>
                        <th style="width: 150px;">Số phiên bản</th>
                        <th style="width: 110px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* 1. Tên dòng xe *@
                            <td class="fw-bold text-dark">@item.Name</td>

                            @* 2. Thương hiệu *@
                            <td class="text-center">
                                <span class="badge bg-info text-dark shadow-sm">
                                    <i class="fas fa-tag me-1"></i>@item.Brand?.Name
                                </span>
                            </td>

                            @* 3. Mô tả chi tiết *@
                            <td>
                                @if (!string.IsNullOrEmpty(item.ModelDescription))
                                {
                                    <div class="small text-muted" style="max-height: 60px; overflow-y: auto; line-height: 1.4; font-style: italic;">
                                        @item.ModelDescription
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small italic">Chưa có mô tả chi tiết</span>
                                }
                            </td>

                            @* 4. Thống kê số lượng xe thuộc dòng này *@
                            <td class="text-center">
                                <span class="badge bg-secondary">@item.Cars?.Count phiên bản</span>
                            </td>

                            @* 5. Thao tác *@
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm border-0" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm border-0" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Tùy chỉnh thanh cuộn cho ô mô tả */
    div.small.text-muted::-webkit-scrollbar {
        width: 3px;
    }
    div.small.text-muted::-webkit-scrollbar-thumb {
        background-color: #d1d1d1;
        border-radius: 10px;
    }
</style>