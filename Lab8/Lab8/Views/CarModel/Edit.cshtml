@model Lab8.Models.CarModel

@{
    ViewData["Title"] = (Model == null || Model.Id == 0) ? "Thêm Dòng Xe" : "Cập nhật Dòng Xe";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <div class="card shadow mb-4">
        <div class="card-header fw-bold bg-light">
            <i class="fas fa-edit me-1"></i> Thông tin dòng xe
        </div>
        <div class="card-body">
            @* Tự động nhận diện Action dựa trên Model Id *@
            <form asp-action="@(Model == null || Model.Id == 0 ? "Create" : "Edit")" method="post">

                @* Hiển thị tất cả lỗi nếu có (Giúp debug nhanh) *@
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                @* CỰC KỲ QUAN TRỌNG: Id ẩn để Update hoạt động *@
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Tên Dòng Xe</label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên dòng xe..." required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="BrandId" class="form-label fw-bold">Hãng Sản Xuất</label>
                        <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId" required>
                            <option value="">-- Chọn hãng xe --</option>
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success px-4 shadow-sm">
                        <i class="fas fa-save me-1"></i> Lưu dữ liệu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left me-1"></i> Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}