@model Lab8.Models.CarModel

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase fw-bold text-warning">Cập nhật dòng xe</h1>

    <div class="card shadow mb-4 border-left-warning">
        <div class="card-header py-3 bg-light">
            <h6 class="m-0 font-weight-bold text-dark">
                <i class="fas fa-edit me-2"></i>Thay đổi thông tin: @Model.Name
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    @* Tên dòng xe *@
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Tên Dòng Xe</label>
                        <input asp-for="Name" class="form-control" required placeholder="Ví dụ: Camry" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    @* Chọn Hãng Xe *@
                    <div class="col-md-6 mb-3">
                        <label asp-for="BrandId" class="form-label fw-bold">Hãng Sản Xuất</label>
                        <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId" required>
                            <option value="">-- Chọn hãng xe --</option>
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>

                    @* Mô tả dòng xe *@
                    <div class="col-md-12 mb-3">
                        <label asp-for="ModelDescription" class="form-label fw-bold">Mô tả dòng xe</label>
                        <textarea asp-for="ModelDescription" class="form-control" rows="4" placeholder="Nhập mô tả dòng xe...">@Model.ModelDescription</textarea>
                        <span asp-validation-for="ModelDescription" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 border-top pt-3 text-end">
                    <button type="submit" class="btn btn-warning px-5 fw-bold shadow-sm">
                        <i class="fas fa-save me-1"></i> XÁC NHẬN CẬP NHẬT
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2 shadow-sm">
                        <i class="fas fa-undo me-1"></i> HỦY BỎ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}