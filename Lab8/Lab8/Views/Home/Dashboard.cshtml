@{
    ViewData["Title"] = "Hệ thống quản trị - Lab 8";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase fw-bold text-dark">Tổng quan hệ thống</h1>
    <ol class="breadcrumb mb-4 shadow-sm p-3 bg-white rounded">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Admin</a></li>
        <li class="breadcrumb-item active">Báo cáo dữ liệu thời gian thực</li>
    </ol>

    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4 shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div><i class="fas fa-tags fa-2x opacity-50"></i></div>
                        <div class="text-end">
                            <div class="small text-uppercase">Hãng Xe</div>
                            <div class="h3 m-0 fw-bold">@ViewBag.BrandCount</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-dark bg-opacity-10 border-0">
                    <a class="small text-white stretched-link text-decoration-none" asp-controller="Brand" asp-action="Index">Xem danh sách</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4 shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div><i class="fas fa-car fa-2x opacity-50"></i></div>
                        <div class="text-end">
                            <div class="small text-uppercase">Sản Phẩm Xe</div>
                            <div class="h3 m-0 fw-bold">@ViewBag.CarCount</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-dark bg-opacity-10 border-0">
                    <a class="small text-white stretched-link text-decoration-none" asp-controller="Car" asp-action="Index">Quản lý kho</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4 shadow border-0">
                <div class="card-body text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <div><i class="fas fa-users fa-2x opacity-50"></i></div>
                        <div class="text-end text-dark">
                            <div class="small text-uppercase">Khách Hàng</div>
                            <div class="h3 m-0 fw-bold">@ViewBag.CustomerCount</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-dark bg-opacity-10 border-0 text-dark">
                    <a class="small text-dark stretched-link text-decoration-none" asp-controller="Customer" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-dark"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4 shadow border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div><i class="fas fa-shopping-cart fa-2x opacity-50"></i></div>
                        <div class="text-end">
                            <div class="small text-uppercase">Đơn Hàng</div>
                            <div class="h3 m-0 fw-bold">@ViewBag.OrderCount</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between bg-dark bg-opacity-10 border-0">
                    <a class="small text-white stretched-link text-decoration-none" asp-controller="Order" asp-action="Index">Xử lý giao dịch</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    Biểu đồ tăng trưởng doanh thu
                </div>
                <div class="card-body">
                    <canvas id="myAreaChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>

        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Thống kê số lượng dòng xe theo hãng
                </div>
                <div class="card-body">
                    <canvas id="myBarChart" width="100%" height="40"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
}