@model Lab8.Models.Car

<div class="container-fluid px-4">
    <h1 class="mt-4">Cập nhật thông tin xe</h1>
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="fw-bold">Tên Phiên Bản</label>
                        <input asp-for="Name" class="form-control" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="CarModelId" class="fw-bold">Dòng Xe</label>
                        <select asp-for="CarModelId" class="form-select" asp-items="ViewBag.CarModelId">
                            <option value="">-- Chọn dòng xe --</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="fw-bold">Giá Bán (VNĐ)</label>
                        <input asp-for="Price" type="number" step="any" class="form-control" />
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-warning px-4">CẬP NHẬT</button>
                    <a asp-action="Index" class="btn btn-secondary">QUAY LẠI</a>
                </div>
            </form>
        </div>
    </div>
</div>