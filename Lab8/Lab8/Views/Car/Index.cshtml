@model IEnumerable<Lab8.Models.Car>

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase fw-bold">Danh Mục Xe Trong Kho</h1>

    <div class="card mb-4 shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-car me-2"></i>Danh sách phiên bản xe</h6>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold text-primary">
                <i class="fas fa-plus-circle me-1"></i> Thêm xe mới
            </a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Tên Phiên Bản</th>
                        <th>Dòng Xe</th>
                        <th>Hãng Sản Xuất</th>
                        <th class="text-end">Giá Bán (VNĐ)</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>
                            <td>@item.CarModel?.Name</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @item.CarModel?.Brand?.Name
                                </span>
                            </td>
                            @* Định dạng số: 1,000,000 *@
                            <td class="text-end text-success fw-bold">
                                @((item.Price ?? 0).ToString("#,##0")) VNĐ
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm shadow-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>