@model IEnumerable<Lab8.Models.Car>

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase fw-bold text-primary">Danh Mục Xe Trong Kho</h1>

    <div class="card mb-4 shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-car me-2"></i>Danh sách phiên bản xe hiện có</h6>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold text-primary shadow-sm">
                <i class="fas fa-plus-circle me-1"></i> Thêm xe mới
            </a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th style="width: 100px;">Hình ảnh</th>
                        <th>Phiên Bản & Dòng Xe</th>
                        <th style="width: 200px;">Mô tả chi tiết</th>
                        <th style="width: 100px;">Số lượng</th>
                        <th>Hãng Sản Xuất</th>
                        <th class="text-end">Giá Bán (VNĐ)</th>
                        <th style="width: 110px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* 1. Hình ảnh *@
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="Car Image" class="img-thumbnail shadow-sm" style="width: 80px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light text-muted d-flex align-items-center justify-content-center border rounded" style="width: 80px; height: 60px; font-size: 0.7rem;">
                                        No Image
                                    </div>
                                }
                            </td>

                            @* 2. Tên & Dòng xe *@
                            <td>
                                <div class="fw-bold text-dark">@item.Name</div>
                                <div class="small text-muted">Dòng: @item.CarModel?.Name</div>
                            </td>

                            @* 3. Mô tả chi tiết *@
                            <td>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <div class="small text-muted" style="max-height: 60px; overflow-y: auto; line-height: 1.4; font-style: italic;">
                                        @item.Description
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small italic">Chưa có mô tả chi tiết</span>
                                }
                            </td>

                            @* 4. Số lượng tồn kho *@
                            <td class="text-center">
                                @if (item.StockQuantity <= 0)
                                {
                                    <span class="badge bg-secondary">Hết hàng</span>
                                }
                                else if (item.StockQuantity <= 5)
                                {
                                    <span class="badge bg-danger animate-pulse">Sắp hết (@item.StockQuantity)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.StockQuantity chiếc</span>
                                }
                            </td>

                            @* 5. Thương hiệu *@
                            <td class="text-center">
                                <span class="badge bg-info text-dark shadow-sm">
                                    <i class="fas fa-tag me-1"></i>@item.CarModel?.Brand?.Name
                                </span>
                            </td>

                            @* 6. Giá bán *@
                            <td class="text-end text-success fw-bold">
                                @((item.Price ?? 0).ToString("#,##0")) <small>VNĐ</small>
                            </td>

                            @* 7. Thao tác *@
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm border-0" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm border-0" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Hiệu ứng nhấp nháy cho xe sắp hết hàng */
    .animate-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: .5; }
    }
    
    /* Tùy chỉnh thanh cuộn cho ô mô tả */
    div.small.text-muted::-webkit-scrollbar {
        width: 3px;
    }
    div.small.text-muted::-webkit-scrollbar-thumb {
        background-color: #d1d1d1;
        border-radius: 10px;
    }
</style>