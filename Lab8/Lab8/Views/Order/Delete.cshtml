@model Lab8.Models.Order

@* Giao diện xác nhận xóa *@
<div class="container-fluid px-4">
    <h3 class="text-danger mt-4">Xác nhận xóa vĩnh viễn đơn hàng #@Model.Id?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Khách hàng:</dt>
        <dd class="col-sm-10">@Model.Customer?.Name</dd>

        <dt class="col-sm-2">Ngày đặt:</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>
    </dl>

    @* Form gửi yêu cầu xóa thực sự *@
    <form asp-action="Delete" method="post">
        @* Quan trọng nhất: Cần có ID ở đây *@
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">XÓA DỮ LIỆU</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
    </form>
</div>