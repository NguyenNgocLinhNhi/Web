@model Lab8.Models.Order

@{
    ViewData["Title"] = "Xác nhận xóa đơn hàng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-danger text-uppercase fw-bold">Xác nhận xóa đơn hàng</h1>
    <ol class="breadcrumb mb-4 shadow-sm p-2 bg-light rounded">
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý đơn hàng</a></li>
        <li class="breadcrumb-item active">Xóa đơn hàng #@Model.Id</li>
    </ol>

    <div class="card shadow mb-4 border-left-danger">
        <div class="card-header py-3 bg-light">
            <h6 class="m-0 font-weight-bold text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i> Cảnh báo: Hành động này không thể hoàn tác!
            </h6>
        </div>
        <div class="card-body py-5 text-center">
            <div class="mb-4">
                <i class="fas fa-file-invoice-dollar fa-5x text-secondary opacity-25"></i>
            </div>
            <h3 class="text-dark mb-4">Bạn có chắc chắn muốn xóa vĩnh viễn đơn hàng này?</h3>
            
            <div class="row justify-content-center">
                <div class="col-md-8 text-start bg-light p-4 rounded border">
                    <dl class="row mb-0 h5">
                        <dt class="col-sm-4 text-muted">Mã đơn hàng:</dt>
                        <dd class="col-sm-8 fw-bold text-primary">ORD-@Model.Id.ToString("D4")</dd>

                        <dt class="col-sm-4 text-muted border-top pt-2">Khách hàng:</dt>
                        <dd class="col-sm-8 border-top pt-2 fw-bold">@Model.Customer?.Name</dd>

                        <dt class="col-sm-4 text-muted border-top pt-2">Ngày lập đơn:</dt>
                        <dd class="col-sm-8 border-top pt-2">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4 text-muted border-top pt-2">Tổng giá trị:</dt>
                        <dd class="col-sm-8 border-top pt-2 text-danger fw-bold">
                            @Model.TotalAmount.ToString("N0") VNĐ
                        </dd>

                        <dt class="col-sm-4 text-muted border-top pt-2">Số lượng xe:</dt>
                        <dd class="col-sm-8 border-top pt-2">
                            <span class="badge bg-info">@(Model.OrderDetails?.Count ?? 0) sản phẩm</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-5">
                <form asp-action="Delete" method="post">
                    @* CỰC KỲ QUAN TRỌNG: Phải có Id ẩn để gửi về hàm DeleteConfirmed *@
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger btn-lg px-5 shadow fw-bold">
                        <i class="fas fa-trash-alt me-2"></i> XÁC NHẬN XÓA DỮ LIỆU
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4 ms-2 shadow">
                        <i class="fas fa-times me-1"></i> HỦY BỎ
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card trang trí đồng bộ dự án */
    .border-left-danger {
        border-left: 0.25rem solid #e74a3b !important;
    }
    /* Làm đẹp danh sách mô tả */
    dt { font-weight: 600; }
    .bg-light { background-color: #f8f9fc !important; }
</style>