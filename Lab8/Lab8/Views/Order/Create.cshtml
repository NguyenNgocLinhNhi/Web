@model Lab8.Models.Order

<h1 class="mt-4">Lập Đơn Hàng Mới</h1>
<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow">
                <div class="card-header bg-primary text-white font-weight-bold">Thông tin chung</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Khách hàng mua xe</label>
                        <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerId">
                            <option value="">-- Chọn khách hàng --</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ghi chú đơn hàng</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-4 shadow">
                <div class="card-header bg-success text-white font-weight-bold">Chọn xe bán (Đánh dấu để chọn)</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Chọn</th>
                                <th>Tên Xe</th>
                                <th>Giá bán</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in ViewBag.Cars)
                            {
                                <tr>
                                    <td><input type="checkbox" name="selectedCars" value="@car.Id" /></td>
                                    <td>@car.Name</td>
                                    <td>@car.Price.ToString("N0") VNĐ</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100">XÁC NHẬN LẬP ĐƠN HÀNG</button>
        </div>
    </div>
</form>