@model IEnumerable<Lab8.Models.Order>

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase fw-bold text-primary">Quản lý Đơn Hàng</h1>

    <div class="card mb-4 shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-list me-2"></i>Lịch sử giao dịch</h6>
            <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">LẬP ĐƠN MỚI</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-bordered table-hover align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th>Mã Đơn</th>
                        <th>Ngày Lập</th>
                        <th>Khách Hàng</th>
                        <th class="text-end">Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">ORD-@item.Id.ToString("D4")</td>
                            <td class="text-center">@item.OrderDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.Customer?.Name</td>
                            <td class="text-end text-danger fw-bold">@item.TotalAmount.ToString("N0") VNĐ</td>
                            <td class="text-center">
                                @if (item.Status == 1)
                                {
                                    <span class="badge bg-success">Đã duyệt</span>
                                }
                                else if (item.Status == 2)
                                {

                                    <span class="badge bg-secondary">Đã hủy</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Chi tiết"><i class="fas fa-eye"></i></a>

                                    @if (item.Status == 0) // Chỉ hiện nút Xử lý khi đang Chờ
                                    {
                                        <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Duyệt đơn hàng này?')"><i class="fas fa-check"></i></button>
                                        </form>
                                        <form asp-action="Cancel" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-warning btn-sm text-white" onclick="return confirm('Hủy đơn hàng này?')"><i class="fas fa-ban"></i></button>
                                        </form>
                                    }

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>