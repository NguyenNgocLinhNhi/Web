@model Lab8.Models.Order
<h1 class="mt-4">Chi tiết hóa đơn #@Model.Id</h1>
<div class="card mb-4 shadow border-left-info">
    <div class="card-header bg-info text-white">
        <i class="fas fa-info-circle me-1"></i> Thông tin giao dịch
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Khách hàng:</strong> @Model.Customer?.Name</p>
                <p><strong>Ngày lập:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
            <div class="col-md-6 text-end">
                <h3 class="text-danger">Tổng tiền: @Model.OrderDetails.Sum(x => x.Price).ToString("N0") VNĐ</h3>
            </div>
        </div>
        <table class="table table-bordered mt-3">
            <thead class="table-light">
                <tr>
                    <th>Sản phẩm xe</th>
                    <th class="text-end">Giá bán</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.Car?.Name</td>
                        <td class="text-end">@item.Price.ToString("N0") VNĐ</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <button class="btn btn-primary" onclick="window.print()"><i class="fas fa-print"></i> In hóa đơn</button>
        </div>
    </div>
</div>