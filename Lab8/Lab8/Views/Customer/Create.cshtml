@model Lab8.Models.Customer

@{
    ViewData["Title"] = (Model == null || Model.Id == 0) ? "Thêm Khách Hàng" : "Cập Nhật Khách Hàng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase fw-bold text-success">@ViewData["Title"]</h1>
    <div class="card shadow mb-4 border-left-success">
        <div class="card-header py-3 bg-light font-weight-bold text-dark">
            <i class="fas fa-user-edit me-1"></i> Thông tin hồ sơ khách hàng
        </div>
        <div class="card-body">
            <form asp-action="@(Model == null || Model.Id == 0 ? "Create" : "Edit")" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                @if (Model != null && Model.Id > 0)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Họ và Tên khách hàng</label>
                        <input asp-for="Name" class="form-control" placeholder="Nguyễn Văn A..." required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Phone" class="form-label fw-bold">Số điện thoại liên hệ</label>
                        <input asp-for="Phone" class="form-control" placeholder="09xxxx..." required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Địa chỉ Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@gmail.com" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Address" class="form-label fw-bold">Địa chỉ cư trú</label>
                        <textarea asp-for="Address" class="form-control" rows="2" placeholder="Số nhà, tên đường, tỉnh/thành..."></textarea>
                    </div>
                </div>

                <div class="mt-4 border-top pt-3 text-end">
                    <button type="submit" class="btn btn-success px-5 shadow-sm">
                        <i class="fas fa-save me-1"></i> LƯU THÔNG TIN
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2 shadow-sm">HỦY BỎ</a>
                </div>
            </form>
        </div>
    </div>
</div>