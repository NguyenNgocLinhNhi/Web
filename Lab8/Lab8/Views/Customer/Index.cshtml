@model IEnumerable<Lab8.Models.Customer>

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản Lý Khách Hàng</h1>
    <div class="card mb-4 shadow border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-users me-2"></i>Danh sách khách hàng</h6>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold text-success">
                <i class="fas fa-plus-circle me-1"></i> Thêm mới
            </a>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered" id="datatablesSimple">
                <thead class="table-light">
                    <tr>
                        <th>Họ và Tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>
                            <td>@item.Phone</td> @* Đã sửa thành Phone khớp với Model *@
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm shadow-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>