@model IEnumerable<Lab8.Models.Customer>

<div class="container-fluid px-4">
    <h1 class="mt-4 text-uppercase fw-bold text-primary">Quản Lý Khách Hàng</h1>
    <div class="card mb-4 shadow border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-users me-2"></i>Danh sách khách hàng hệ thống</h6>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold text-success shadow-sm">
                <i class="fas fa-plus-circle me-1"></i> Thêm mới khách hàng
            </a>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle" id="datatablesSimple">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>Họ và Tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>
                            <td class="text-center text-primary fw-bold">@item.Phone</td>
                            <td>@item.Email</td>
                            <td><small class="text-muted">@item.Address</small></td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm border-0" title="Chi tiết"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm border-0" title="Sửa"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm border-0" title="Xóa"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>