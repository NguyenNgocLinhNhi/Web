@model Lab8.Models.Customer

<div class="container-fluid px-4">
    <h1 class="mt-4">Cập Nhật Khách Hàng</h1>
    <div class="card shadow mb-4 border-left-warning">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @* Cực kỳ quan trọng: Phải có Id ẩn để hệ thống biết đang sửa ai *@
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="fw-bold">Họ và Tên</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Phone" class="fw-bold">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Email" class="fw-bold">Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Address" class="fw-bold">Địa chỉ</label>
                        <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-warning px-4">CẬP NHẬT</button>
                    <a asp-action="Index" class="btn btn-secondary">HỦY BỎ</a>
                </div>
            </form>
        </div>
    </div>
</div>