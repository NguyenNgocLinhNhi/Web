@model Lab8.Models.Customer

<div class="container-fluid px-4">
    <h1 class="mt-4 text-danger text-uppercase fw-bold">Xác Nhận Xóa</h1>
    <div class="card shadow mb-4 border-left-danger">
        <div class="card-header py-3 bg-light">
            <h6 class="m-0 font-weight-bold text-danger"><i class="fas fa-exclamation-triangle me-1"></i> Cảnh báo: Hành động này không thể hoàn tác</h6>
        </div>
        <div class="card-body py-4">
            <p class="fs-5">Bạn có chắc chắn muốn xóa khách hàng <strong>@Model.Name</strong> khỏi hệ thống?</p>
            <hr />
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5 shadow">XÁC NHẬN XÓA NGAY</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4 ms-2 shadow">HỦY BỎ</a>
            </form>
        </div>
    </div>
</div>